{
  "hybrid": {
    "cava_sed": "s/;//g;s/0/▁ /g;s/1/▂ /g;s/2/▃ /g;s/3/▄ /g;s/4/▅ /g;s/5/▆ /g;s/6/▇ /g;s/7/█/g;",
    "stylesheet": "style.css",
    "cava_update_rate": 5,
    "cava_framerate": 360,
    "expand_right": true,
    "experimental": true,
    "expand_left": true,
    "cava_bars": 7,
    "r": 40,
    "g": 30,
    "b": 90,
    "a": 0.8
  },
  "variables": {
    "@volume": "echo $(pactl get-sink-volume @DEFAULT_SINK@ | rg -o '[0-9]{1,3}%' | head -n 1 | cut -d '%' -f 1)%",
    "@get": "jq -r",
    "$+s": "<small>",
    "$-s": "</small>"
  },
  "left-label_all_worspaces": {
    "command": "hyprctl workspaces -j | jq '[ recurse | select(has(\"id\")?).id]' | jq -c 'sort_by(tonumber)'",
    "tooltip": "Current workspace:  ",
    "tooltip_command": "hyprctl activeworkspace -j | @get '.id'"
  },
  "centered-label_current-window": {
    "command": "hyprctl activewindow -j | @get '.title'",
    "tooltip": "Currently focused on ",
    "tooltip_command": "hyprctl activewindow -j | @get '.title'"
  },
  "right-tray_tray": {},
  "right-label_time": {
    "command": "date '+%a %Y-%M-%d  %H:%M'",
    "tooltip_command": "cal -m",
    "update_rate": 5000
  }
}

