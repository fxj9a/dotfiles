set $mode_system System (l) lock, (e) logout, (s) suspend, (h) hibernate, (r) reboot, (Shift+s) shutdown
mode "$mode_system" {
    bindsym l exec --no-startup-id /home/adrian/.config/i3/i3exit lock, mode "default"
    bindsym e exec --no-startup-id /home/adrian/.config/i3/i3exit logout, mode "default"
    bindsym s exec --no-startup-id /home/adrian/.config/i3/i3exit suspend, mode "default"
    bindsym h exec --no-startup-id /home/adrian/.config/i3/i3exit hibernate, mode "default"
    bindsym r exec --no-startup-id /home/adrian/.config/i3/i3exit reboot, mode "default"
    bindsym Shift+s exec --no-startup-id /home/adrian/.config/i3/i3exit shutdown, mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

bindsym Mod4+BackSpace mode "$mode_system"

# NO screensaver
exec --no-startup-id xset s noblank
exec --no-startup-id xscreensaver -no-splash
# redshift (like f.lux)
exec --no-startup-id redshift-gtk -l 51:12


