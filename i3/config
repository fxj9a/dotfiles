#exec_always --no-startup-id feh --bg-fill ~/Pictures/fehbg.png

# no right mouse button on trackpad
exec --no-startup-id synclient RightButtonAreaLeft=0
exec --no-startup-id synclient RightButtonAreaTop=0
#natural scrolling
exec --no-startup-id synclient VertScrollDelta=-110
exec --no-startup-id synclient HorizScrollDelta=-110

# Pulse Audio controls
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +5% #increase sound volume
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -5% #decrease sound volume
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle # mute sound

# Sreen brightness controls
bindsym XF86MonBrightnessUp exec --no-startup-id xbacklight -inc 10 # increase screen brightness
bindsym XF86MonBrightnessDown exec --no-startup-id xbacklight -dec 10 # decrease screen brightness

#########################
# Media player controls #
#########################
# play/pause
bindsym XF86AudioPlay exec --no-startup-id playerctl play-pause
#bindsym F8 exec --no-startup-id playerctl play-pause
#conextmenu btn (play/pause)
bindcode 135 exec --no-startup-id playerctl play-pause 
# next
bindsym XF86AudioNext exec --no-startup-id playerctl next
#bindsym F9 exec --no-startup-id playerctl next
# previous
bindsym XF86AudioPrev exec --no-startup-id playerctl previous
#bindsym F7 exec --no-startup-id playerctl previous

# shortcuts for most used programs
bindsym --release Mod1+Mod4+p exec --no-startup-id scrot -s '%Y-%m-%d-%T_$wx$h_scrot.png' -e 'mv $f ~/scrots/'
bindsym Mod1+Mod4+k exec --no-startup-id firefox
bindsym Mod1+Mod4+g exec --no-startup-id chromium --force-dark-mode
bindsym Mod1+Mod4+h exec --no-startup-id nautilus
bindsym Mod1+Mod4+Shift+h exec --no-startup-id thunar
bindsym Mod1+Mod4+Shift+s exec --no-startup-id com.spotify.Client
bindsym Mod1+Mod4+l exec --no-startup-id pavucontrol
bindsym Mod1+Mod4+j exec --no-startup-id steam

# 1080p-settings
bindsym Mod4+l exec --no-startup-id i3lock -i ~/.config/i3/i3locked1920x1080.jpg

# X220 settings
#bindsym Mod4+l exec --no-startup-id i3lock -i ~/.config/i3/i3locked1366x768.png
